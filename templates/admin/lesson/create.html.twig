{% extends 'base.html.twig' %}
{% form_theme form with [
    'admin/form/_form_theme.html.twig',
] %}
{% block title %}{{ new == true ? 'New Lesson' : 'Update Lesson' }}{% endblock %}
{% block body %}
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Lesson</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="{{ path('home') }}">Home</a></li>
                        <li class="breadcrumb-item active">Courses</li>
                        <li class="breadcrumb-item active">Lessons</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">

        <div class="col-md-12">
            <!-- general form elements -->
            <div class="card card-info">
                <div class="card-header">
                    <h3 class="card-title">{{ new == true ? 'Add new Lesson' : 'Update Lesson' }}</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                {{ form_start(form) }}
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                {{ form_row(form.name) }}
                            </div>
                            <div class="form-group">
                                {{ form_row(form.description) }}
                            </div>
                            <div class="form-group">
                                {{ form_row(form.position) }}
                            </div>
                            <div class="form-group">
                                {{ form_widget(form.lesson_images) }}

                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-info">Submit</button>
                                <button type="submit" onclick="history.back()" class="btn btn-default">Back</button>
                            </div>
                        </div>

                    </div>
                    <!-- /.card-body -->

                    {{ form_end(form) }}
                </div>
                <!-- /.card -->
            </div>
        </div>
    </section>
    <!-- /.content -->
{% endblock %}