{% extends 'base.html.twig' %}

{% block title %}Vendors list{% endblock %}
{% block body %}

    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Vendors</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="{{ path('home') }}">Home</a></li>
                        <li class="breadcrumb-item active">Vendors</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        <div class="col-xs-12 add-block">
            <a href="{{ path('admin.vendor.new') }}" class="btn btn-info" title="Add new">
                <i class="fa fa-plus-circle"></i>
                Add New Vendor
            </a>
        </div>
        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Vendors</h3>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                    <tr>
                        <th style="width: 1%">
                            #
                        </th>
                        <th style="width: 20%">
                            Vendor Name
                        </th>
                        <th style="width: 30%">
                            Contact
                        </th>
                        <th>
                            Address
                        </th>
                        <th style="width: 20%"></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for vendor in vendors %}
                        <tr>
                            <td>
                                #
                            </td>
                            <td>
                                <a>
                                    {{ vendor.name }}
                                </a>
                                <br/>
                                <small>
                                    Created {{ vendor.createdAt|date("Y-m-d H:i:s") }}
                                </small>
                            </td>
                            <td>
                                {{ vendor.contact }}
                            </td>
                            <td>
                                {{ vendor.address }}
                            </td>
                            <td class="project-actions text-right">
                                <a class="btn btn-info btn-sm" href="{{ path('admin.vendor.edit', {'id': vendor.id}) }}">
                                    <i class="fas fa-pencil-alt">
                                    </i>
                                    Edit
                                </a>
                                <form method="post" action="{{ path('admin.vendor.delete', {id: vendor.id}) }}" style="display: inline-block" onsubmit="return confirm('Are you sure to delete ?')">
                                    <input type="hidden" name="_method" value="DELETE">
                                    <input type="hidden" name="token" value="{{ csrf_token('delete') }}">
                                    <button class="btn btn-danger btn-sm">
                                        <i class="fas fa-trash">
                                        </i>
                                        Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

            </div>
            <div class="card-footer clearfix">
                {{ knp_pagination_render(vendors) }}
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->

    </section>
    <!-- /.content -->
{% endblock %}