{% extends 'base.html.twig' %}

{% block title %}Course Lessons{% endblock %}
{% block body %}
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Courses Material</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="{{ path('home') }}">Home</a></li>
                        <li class="breadcrumb-item active">Courses Material</li>
                        <li class="breadcrumb-item active">{{ course.name }}</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
    <!-- Main content -->
    <section class="content">
        <div class="container">
            {% for message in app.flashes('success') %}
                <div class="row">
                    <div class="alert alert-success">
                        {{ message }}
                    </div>
                </div>
            {% endfor %}
            <div class="row">
                <div class="col-12 col-sm-12">
                    <div class="card card-info card-tabs">
                        <div class="card-body pb-0">
                                {% for lesson in lessons %}
                                    <div class="col-4 d-flex align-items-stretch">
                                        <div class="card bg-light">
                                            <div class="card-body pt-0">
                                                <div class="row">
                                                    <div class="col-7">
                                                        <h2 class="lead">
                                                            <a href="{{ path('admin.course.lessons', {'id': course.id}) }}">
                                                                <b>{{ lesson.name }}</b>
                                                            </a>
                                                        </h2>
                                                       <p class="text-muted text-sm">{{ lesson.description }} </p>
                                                    </div>
                                                    <div class="col-5 text-center">
                                                        <img src="/img/user1-128x128.jpg" alt=""
                                                             class="img-circle img-fluid">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="card-footer">
                                                <div class="text-right">
                                                    <a href="{{ path('admin.lesson.edit', {'id': lesson.id} ) }}" class="btn btn-sm bg-teal">
                                                        <i class="fas fa-edit"></i> Edit lesson
                                                    </a>
                                                    <a href="{{ path('admin.lesson.delete', {'id': lesson.id}) }}" class="btn btn-sm btn-danger">
                                                        <i class="fas fa-trash"></i> Delete lesson
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                        </div>
                        <!-- /.card -->
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- /.content -->
{% endblock %}