{% extends 'base.html.twig' %}

{% block title %}List of Tasks
{% endblock %}
{% block body %}

	<!-- Content Header (Page header) -->
	<section class="content-header">
		<div class="container-fluid">
			<div class="row mb-2">
				<div class="col-sm-6">
					<h1>Tasks</h1>
				</div>
				<div class="col-sm-6">
					<ol class="breadcrumb float-sm-right">
						<li class="breadcrumb-item">
							<a href="{{ path('home') }}">Home</a>
						</li>
						<li class="breadcrumb-item active">Tasks</li>
					</ol>
				</div>
			</div>
		</div>
		<!-- /.container-fluid -->
	</section>

	<!-- Main content -->
	<section class="content">
		{% for message in app.flashes('success') %}
			<div class="alert alert-success">
				{{ message }}
			</div>
		{% endfor %}
		<!-- Default box -->
		<div class="card">
			<div class="card-header">
				<h3 class="card-title">Total Number of Added Tasks:
					{{ count }}</h3>
			</div>
			<div class="card-body p-0">
				<table class="table table-striped projects">
					<thead>
						<tr>
							<th>
								#
							</th>
							<th>
								Parent
							</th>							
							<th>
								Employee
							</th>
							<th>
								Level
							</th>														
							<th>
								Start Date
							</th>
							<th>
								End Date
							</th>
							<th>
								 Category
							</th>
							<th>
								 Message
							</th>		
							<th>
								 Status
							</th>													
							<th style="width: 20%"></th>
						</tr>
					</thead>
					<tbody>
						{% for task in tasks %}
							<tr>
								<td>
									#
									{{ task.id }}
								</td>
								<td>
									{{ task.family.name }}
								</td>
								<td>
									{{ task.employee.name }}
								</td>	
								<td>
									{{ task.employee.category.name }}
								</td>																								
								<td>
									{{ task.startDate|date('Y-m-d') }}
								</td>
								<td>
									{{ task.endDate|date('Y-m-d') }}
								</td>
								<td>
									{{ task.category }}
								</td>
								<td>
									{{ task.message }}
								</td>
								<td>
									{{ task.status }}
								</td>																									
								<td class="project-actions text-right">
									<a class="btn btn-info btn-sm" href="{{ path('admin.task.edit', {'id': task.id}) }}">
										<i class="fas fa-pencil-alt"></i>
										Edit
									</a>
									<form method="post" action="{{ path('admin.task.delete', {id: task.id}) }}" style="display: inline-block" onsubmit="return confirm('Are you sure to delete ?')">
										<input type="hidden" name="_method" value="DELETE">
										<input type="hidden" name="token" value="{{ csrf_token('delete') }}">
										<button class="btn btn-danger btn-sm">
											<i class="fas fa-trash"></i>
											Delete
										</button>
									</form>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>

			</div>
			<div class="card-footer clearfix">
				{{ knp_pagination_render(tasks) }}
			</div>
			<!-- /.card-body -->
		</div>
		<!-- /.card -->

	</section>
	<!-- /.content -->
{% endblock %}
