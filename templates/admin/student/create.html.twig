{% extends 'base.html.twig' %}

{% block title %}Student Account Profile{% endblock %}
{% block body %}
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Student Account</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="{{ path('home') }}">Home</a></li>
                        <li class="breadcrumb-item active"><a href="{{ path('admin.families.index') }}">Families</a></li>
                        <li class="breadcrumb-item active">Students</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        {{ form_start(form) }}

        <div class="col-md-12">
            <!-- general form elements -->
            <div class="card card-success">
                <div class="card-header">
                    <h3 class="card-title">Person Bio Data</h3>
                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-minus"></i></button>
                    </div>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_row(form.name) }}
                            </div>
                            <div class="form-group">
                                {{ form_row(form.skype) }}
                            </div>

                            <div class="form-group">
                                {{ form_row(form.language) }}
                            </div>
                            <div class="form-group">
                                {{ form_row(form.email) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_row(form.age) }}
                            </div>
                            <div class="form-group">
                                {{ form_row(form.gender) }}
                            </div>

                            <div class="form-group">
                                {{ form_row(form.joining_date) }}
                            </div>
                            <div class="form-group">
                                {{ form_row(form.student_rate) }}
                            </div>
                            <div class="form-group">
                                {{ form_row(form.currency) }}
                            </div>
                            <div class="form-group">
                                {{ form_row(form.studentBank) }}
                            </div>
                            <div class="form-group">
                                {{ form_row(form.invoice_type) }}
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->

            <!-- general form elements -->
            <div class="card card-danger">
                <div class="card-header">
                    <h3 class="card-title">Login Details</h3>
                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-minus"></i></button>
                    </div>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_row(form.username) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_row(form.plainPassword.first) }}
                                {{ form_row(form.plainPassword.second) }}
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->

            <div class="card card-default">
                <div class="card-footer">
                    <button type="submit" class="btn btn-info">Submit</button>
                    <button type="submit" onclick="history.back()" class="btn btn-default">Back</button>
                </div>
            </div>

        </div>
        {{ form_end(form) }}
    </section>
    <!-- /.content -->
{% endblock %}